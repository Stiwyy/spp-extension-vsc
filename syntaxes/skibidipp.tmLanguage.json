{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Skibidi++",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#storage" },
		{ "include": "#console_object" },
		{ "include": "#built_in_functions" },
		{ "include": "#property_access" },
		{ "include": "#strings_double" },
		{ "include": "#strings_single" },
		{ "include": "#numbers" },
		{ "include": "#comments" },
		{ "include": "#constants" },
		{ "include": "#operators" },
		{ "include": "#functions" },
		{ "include": "#variables" }
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control",
					"match": "\\b(if|else|while|for|return|function|class|new|this)\\b"
				}
			]
		},
		"storage": {
			"patterns": [
				{
					"name": "storage.type",
					"match": "\\b(const|let|var)\\b"
				}
			]
		},
		"strings_double": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
		},
		"strings_single": {
			"name": "string.quoted.single",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"name": "constant.numeric",
			"match": "\\b([0-9]+(\\.[0-9]+)?(e[+-]?[0-9]+)?)\\b"
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"match": "//.*$"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.boolean",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "constant.language.null",
					"match": "\\bnull\\b"
				}
			]
		},
		"operators": {
			"name": "keyword.operator",
			"match": "\\+|\\-|\\*|\\/|\\=|\\>|\\<|\\!|\\&|\\||\\^|\\~|\\%"
		},
		"console_object": {
			"match": "\\b(console)\\b",
			"name": "skibidipp.console"
		},
		"built_in_functions": {
			"match": "\\b(print|exit)\\b",
			"name": "skibidipp.builtins"
		},
		"property_access": {
			"match": "(\\.)([a-zA-Z_][a-zA-Z0-9_]*)",
			"captures": {
				"1": { "name": "punctuation.accessor" },
				"2": { "name": "skibidipp.builtins" }
			}
		},
		"functions": {
			"name": "entity.name.function",
			"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\("
		},
		"variables": {
			"name": "variable.other",
			"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b"
		}
	},
	"scopeName": "source.skibidipp"
}
